# Environment Configuration for HireIQ Pro AI Copilot
# Copy this file to .env and fill in your actual API keys

# OpenAI Configuration (Required for LangChain)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here

# LangFuse Configuration (Required for AI Observability)
LANGFUSE_SECRET_KEY=your_langfuse_secret_key_here
LANGFUSE_PUBLIC_KEY=your_langfuse_public_key_here
LANGFUSE_HOST=https://cloud.langfuse.com

# n8n Workflow Integration (Required for Automation)
N8N_WEBHOOK_URL=your_n8n_webhook_url_here
N8N_API_KEY=your_n8n_api_key_here
N8N_BASE_URL=https://app.n8n.cloud

# Vector Database Configuration (Optional)
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_COLLECTION_NAME=hireiq_candidates

# External Integrations (Optional)
SLACK_BOT_TOKEN=your_slack_bot_token_here
LINKEDIN_CLIENT_ID=your_linkedin_client_id_here
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret_here

# Database Configuration (Optional - defaults to JSON files)
DATABASE_URL=postgresql://user:password@localhost/hireiq_pro

# Development Settings
DEBUG=True
LOG_LEVEL=INFO
ENVIRONMENT=development

# Security Configuration
SECRET_KEY=your_secret_key_for_jwt_tokens
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Redis Configuration (for Celery/Background Tasks)
REDIS_URL=redis://localhost:6379/0

# Monitoring and Observability
PROMETHEUS_PORT=8001
ENABLE_METRICS=True
